generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())

  deliveries Delivery[]

  email     String @unique
  password  String
  firstName String @map("first_name")
  lastName  String @map("last_name")

  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  expenses  Expense[]
  trucks    Truck[]
  drivers   Driver[]

  @@map("users")
}

model Truck {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  make         String @map("make")
  model        String @map("model")
  year         Int    @map("year")
  color        String @map("color")
  licensePlate String @map("license_plate")
  vin          String @map("vin")

  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  deletedAt  DateTime?  @map("deleted_at")
  deliveries Delivery[]

  @@map("trucks")
}

model Driver {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  firstName   String @map("first_name")
  lastName    String @map("last_name")
  phoneNumber String @map("phone_number")

  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  deletedAt  DateTime?  @map("deleted_at")
  deliveries Delivery[]

  @@map("drivers")
}

enum DeliveryType {
  FIXED_RATE
  MILEAGE_BASED
}

model Delivery {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  type DeliveryType

  vehicle   Truck  @relation(fields: [vehicleId], references: [id])
  vehicleId String @map("vehicle_id")

  driver   Driver @relation(fields: [driverId], references: [id])
  driverId String @map("driver_id")

  pickupDate  DateTime @map("pickup_date")
  origin      String   @map("origin")
  destination String   @map("destination")

  rate       Decimal? @map("rate") @db.Decimal(12, 4)
  carrierFee Decimal? @map("carrier_fee") @db.Decimal(5, 4)

  miles               Decimal? @map("miles") @db.Decimal(12, 4)
  ratePerMile         Decimal? @map("rate_per_mile") @db.Decimal(12, 4)
  deadheadMiles       Decimal? @map("deadhead_miles") @db.Decimal(12, 4)
  ratePerDeadheadMile Decimal? @map("rate_per_deadhead_mile") @db.Decimal(12, 4)
  totalPayment        Decimal? @map("total_payment") @db.Decimal(12, 4)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("deliveries")
}

enum ExpenseCategory {
  FUEL
  DEF
  FEES
  FIXED_COST
  OTHER
}

model Expense {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  category ExpenseCategory

  incurredAt DateTime @map("incurred_at")
  amount     Decimal  @map("amount") @db.Decimal(12, 4)
  note       String?  @map("note")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("expenses")
}
